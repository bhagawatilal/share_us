<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    android:weightSum="100">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:weightSum="30"
            android:background="@drawable/androidbutton"
            android:padding="15dp">

            <RelativeLayout
                android:id="@+id/send"
                android:layout_width="170dp"
                android:layout_height="130dp"
                android:layout_weight="10"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingRight="0dp"
                android:background="@drawable/backg"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/image25"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_send_round"
                    android:layout_marginTop="27dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEND"
                    android:textColor="#ffffff"
                    android:textSize="23sp"
                    android:layout_marginBottom="35dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignBottom="@+id/image25"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10" />

            <RelativeLayout
                android:id="@+id/receive"
                android:layout_width="170dp"
                android:layout_height="130dp"
                android:layout_weight="10"
                android:background="@drawable/backg"
               >
                <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/image26"
                    android:layout_marginTop="27dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_recieve_round"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:text="RECIEVE"
                    android:textSize="23sp"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignBottom="@+id/image26"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>