<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="1dp"
    app:cardBackgroundColor="@color/design_default_color_surface">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="7dp">
    <FrameLayout
        android:id="@+id/layout_image"
        style="@style/gridIconStyle"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:foregroundGravity="center">
        <ImageView
            android:id="@+id/image"
            android:foregroundGravity="center"
            android:layout_width="@dimen/icon_size_list_normal"
            android:layout_height="@dimen/icon_size_list_normal"
            android:layout_gravity="center"
            android:contentDescription="@string/text_image"/>
        <View
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?stateSelectedImageSquare"/>
    </FrameLayout>

        <TextView
            android:id="@+id/text"
            style="@style/TextAppearance.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:maxLines="1"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="3dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
